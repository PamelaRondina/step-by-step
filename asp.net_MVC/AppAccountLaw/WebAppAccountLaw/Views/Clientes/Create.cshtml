@model WebAppAccountLaw.Models.Cliente

@{
    ViewBag.Title = "Adicionar novo Cliente";
}

<h2>Adicionar novo Cliente</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
